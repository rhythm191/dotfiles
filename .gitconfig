[include]
	path = ~/.gitconfig.local
[user]
        name = rhythm191
        email = sac2ndg+develop@gmail.com
[color]
	ui = auto
	status = auto
	diff = auto
	branch = auto
	interactive = auto
	grep = auto
	autocrlf = false
[push]
	default = current
[pull]
	ff = only
[alias]
	co = checkout
	ci = commit
	cia = commit --amend
	a = add .
	b = branch
	f = fetch -p
	m = merge
	ms = merge --squash
	rmb = branch -d
	rb = rebase
	rh = reset --hard
	pl = pull
	ph = push
	pho = push origin
	s = status
	ss = status -s
	ls = log --stat
	lp = log -p
	la = log --pretty=\"format:%h %ad (%an): %s\" --date=short
	lr = log origin
	# logをツリー表示
	log-graph = log --graph --date=short --pretty=format:'%Cgreen%h %cd %Cblue%cn %Creset%s'
	log-all = log --graph --all --color --pretty='%x09%h %cn%x09%s %Cred%d%Creset'
	dm = diff master
	dw = diff --color-words
	ds = diff --staged
	d1 = diff HEAD~
	d2 = diff HEAD~~
	d3 = diff HEAD~~~
	d4 = diff HEAD~~~~
	d5 = diff HEAD~~~~~
	# mergeの際にconflictが起きたファイルを編集
	edit-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; emacs `f`"
	# mergeの際にconflictが起きたファイルをadd
	add-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
	delete-merged-branch = !git branch --merged | egrep -v '\\*|master|development|develop|staging' | xargs git branch -d

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[core]
	excludesfile = /Users/rhythm191/.gitignore_global
